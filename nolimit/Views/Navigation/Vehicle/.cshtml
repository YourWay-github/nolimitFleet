
@{
    ViewData["Title"] = "Vehicle_status_history";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vehicle Status and History - Fleet Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/docs.css" rel="stylesheet">

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</head>
<body>

  

    <div class="container mt-4">
        <h1 class="text-center mb-4">Vehicle Status and History</h1>
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Vehicle Status</h5>
                        <hr>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="vehicle-status-table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Vehicle ID</th>
                                        <th>Current Status</th>
                                        <th>Next Maintenance Due</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>001</td>
                                        <td>Running</td>
                                        <td>05/15/2023</td>
                                        <td><a href="#" class="btn btn-sm btn-primary"><i class="fas fa-info-circle"></i> View Details</a></td>
                                    </tr>
                                    <tr>
                                        <td>002</td>
                                        <td>Idle</td>
                                        <td>05/18/2023</td>
                                        <td><a href="#" class="btn btn-sm btn-primary"><i class="fas fa-info-circle"></i> View Details</a></td>
                                    </tr>
                                    <tr>
                                        <td>003</td>
                                        <td>Stopped</td>
                                        <td>05/20/2023</td>
                                        <td><a href="#" class="btn btn-sm btn-primary"><i class="fas fa-info-circle"></i> View Details</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Vehicle History</h5>
                        <hr>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="vehicle-history-table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Vehicle ID</th>
                                        <th>Date</th>
                                        <th>Maintenance Type</th>
                                        <th>Cost</th>
                                        <th>Mileage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>001</td>
                                        <td>05/01/2023</td>
                                        <td>Oil Change</td>
                                        <td>$50.00</td>
                                        <td>20,000</td>
                                    </tr>
                                    <tr>
                                        <td>002</td>
                                        <td>04/25/2023</td>
                                        <td>Brake Inspection</td>
                                        <td>$75.00</td>
                                        <td>30,000</td>
                                    </tr>
                                    <tr>
                                        <td>003</td>
                                        <td>04/22/2023</td>
                                        <td>Tire Rotation</td>
                                        <td>$30.00</td>
                                        <td>25,000</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Vehicle Statistics</h5>
                        <hr>
                        <div class="row">
                            <div class="col-sm-6">
                                <h6 class="text-muted">Total Vehicles</h6>
                                <p class="lead">10</p>
                            </div>
                            <div class="col-sm-6">
                                <h6 class="text-muted">Total Mileage</h6>
                                <p class="lead">100,000</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <h6 class="text-muted">Fuel Efficiency</h6>
                                <p class="lead">15 MPG</p>
                            </div>
                            <div class="col-sm-6">
                                <h6 class="text-muted">Maintenance Cost</h6>
                                <p class="lead">$2,500</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#vehicle-status-table').DataTable();
            $('#vehicle-history-table').DataTable();
        });
    </script>
</body>
</html>





