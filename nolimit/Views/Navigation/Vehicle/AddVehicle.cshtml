@model Vehicle
<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            margin-top: 100px;
        }
    </style>
</head>

<body>
<div class="modal-dialog">
    
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addVehicleModalLabel">Add Vehicle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <!-- Add Vehicle form here -->

            <form method="post" action="@Url.Action("AddVehicle", "VehicleAdd")">
                <!-- Registration Number -->
                <div class="mb-3">
                    <label asp-for="RegistrationNumber" class="form-label">Registration Number</label>
                    <input asp-for="RegistrationNumber" type="number" class="form-control" required>
                </div>

                <!-- Brand -->
                <div class="mb-3">
                    <label asp-for="Brand" class="form-label">Brand</label>
                    <input asp-for="Brand" type="text" class="form-control" required>
                </div>

                <!-- Model -->
                <div class="mb-3">
                    <label asp-for="Model" class="form-label">Model Number</label>
                    <input asp-for="Model" type="number" class="form-control" required>
                </div>

                <!-- Year -->
                <div class="mb-3">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" type="number" class="form-control" required>
                </div>

                <!-- License Plate Number -->
                    <div class="mb-3">
                        <label asp-for="LicensePlateNumber" class="form-label">License Plate Number</label>
                        <input asp-for="LicensePlateNumber" class="form-control" required data-val="true" data-val-regex="Invalid license plate format" data-val-regex-pattern="^[A-Za-z]{2}\d{2}[A-Za-z]{1,2}\d{4}$">
                        <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
                    </div>

                <!-- Vehicle Type -->
                <div class="mb-3">
                    <label asp-for="VehicleType" class="form-label">Vehicle Type</label>
                    <input asp-for="VehicleType" type="text" class="form-control" required>
                </div>

                <!-- Fuel Type -->
                <div class="mb-3">
                    <label asp-for="FuelType" class="form-label">Fuel Type</label>
                        <input asp-for="FuelType" type="text" class="form-control" required>
                </div>

                <!-- Current Mileage -->
                <div class="mb-3">
                    <label asp-for="CurrentMileage" class="form-label">Current Mileage</label>
                    <input asp-for="CurrentMileage" type="number" class="form-control" required>
                </div>

                <!-- Owner's Name -->
                <div class="mb-3">
                    <label asp-for="OwnerName" class="form-label">Owner's Name</label>
                        <input asp-for="OwnerName" type="text" class="form-control" required>
                </div>

                <!-- Insurance Provider -->
                <div class="mb-3">
                    <label asp-for="InsuranceProvider" class="form-label">Insurance Provider</label>
                        <input asp-for="InsuranceProvider" type="text" class="form-control" required>
                </div>

                <!-- Insurance Policy Number -->
                <div class="mb-3">
                    <label asp-for="InsurancePolicyNumber" class="form-label">Insurance Policy Number</label>
                        <input asp-for="InsurancePolicyNumber" type="number" class="form-control" required>
                </div>

                <!-- Policy Expiration Date -->
                <div class="mb-3">
                    <label asp-for="PolicyExpirationDate" class="form-label">Policy Expiration Date</label>
                    <input asp-for="PolicyExpirationDate" type="date" class="form-control" required>
                </div>

                <!-- Fuel Level -->
                <div class="mb-3">
                    <label asp-for="FuelLevel" class="form-label">Fuel Level</label>
                    <input asp-for="FuelLevel" type="number" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </form>

        </div>
    </div>
</div>

</body>

</html>
